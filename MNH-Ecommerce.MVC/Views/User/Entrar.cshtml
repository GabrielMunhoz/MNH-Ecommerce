
@{
    ViewData["Title"] = "Logar";
}

<div class="text-center">
    <form class="form-sigin" asp-action="Logar">
        <h1 class="h4 mb-3 login">Entrar</h1>
        <label for=" inputEmail" class="sr-only">Email</label>
        <input type="email" id="inputEmail"
               name="email" placeholder="Insira o Email"
               class="form-control mb-2"
               required />
        <label for="inputsenha" class="sr-only">Senha</label>

        <input type="password" id="password"
               name="password" placeholder="Senha"
               class="form-control mb-2"
               required />

        <button class="btn btn-primary btn-block mb-2" type="submit" >
            Entrar
        </button>

        <div>Novo por aqui? <a [routerLink]='["/register"]'>Registre-se</a></div>
        

    </form>
</div>

